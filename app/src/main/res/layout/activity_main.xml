<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/ic_barack_obama_with_artistic_gymnastic_mckayla_maroney_2"
        android:layout_centerHorizontal="true"
        android:id="@+id/meme"
        android:layout_below="@id/flashcard_question"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="18dp"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/card_background"
        android:elevation="5dp"
        android:gravity="center"
        android:text="You gonna add a flashcard or what?"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/flashcard_question" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/space1"
        android:background="@drawable/answer_background"
        android:gravity="center"
        android:text="An answer"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/space2"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_below="@id/flashcard_answer" />

    <TextView
        android:id="@+id/flashcard_answer2"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/space2"
        android:background="@drawable/answer_background"
        android:gravity="center"
        android:text="Stop admiring the template"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/space3"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_below="@id/flashcard_answer2" />

    <TextView
        android:id="@+id/flashcard_answer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/space3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/answer_background"
        android:gravity="center"
        android:text="Add the damned flashcard"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/eye"
        android:layout_width="match_parent"
        android:layout_height="27dp"

        android:layout_centerHorizontal="true"
        android:src="@drawable/normaleye"
        android:layout_alignParentBottom="true"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/dashedeye"
        android:layout_width="match_parent"

        android:layout_height="27dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dasheye"
        android:visibility="visible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_baseline_add_circle_outline_24"
        android:id="@+id/addbutton"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/pen"
        android:id="@+id/editbutton"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/nextbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/flashcard_question"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/ic_iconmonstr_arrow_right_circle_filled"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/deletebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="246dp"
        android:src="@drawable/ic_baseline_delete_forever_24"
        android:visibility="visible" />



</RelativeLayout>